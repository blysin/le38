<div class="form-horizontal">
    <div class="row-fluid">
        <div class="span24">
            <div class="control-group">
                <label class="control-label">模块背景色</label>
                <div class="controls control-row-auto">
                    <div class="colorSelect" data-value="{{modBGColor}}" data-tag="modBGColor"></div>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">图片排列</label>

                <div class="controls control-row-auto">
                    <label><input type="radio" data-tag="type" name="img_type" value="1"{{#ifCond type '==' '1'}} checked {{/ifCond}}/> 图片在左</label>
                    <label class="ml"><input type="radio" data-tag="type" name="img_type" value="2"{{#ifCond type '==' '2'}} checked {{/ifCond}}/> 图片在右</label>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">图片大小</label>

                <div class="controls control-row-auto">
                    <label><input type="radio" data-tag="size" name="img_size" value="normal"{{#ifCond size '==' 'normal'}} checked {{/ifCond}}/> 300x300</label>
                    <label class="ml"><input type="radio" data-tag="size" name="img_size" value="small"{{#ifCond type '==' 'small'}} checked {{/ifCond}}/> 200x200</label>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="form-vertical">
    <div class="row-fluid">
        <div class="span24">
            <div class="control-group">
                <label class="control-label">图片内容</label>
                <div class="controls control-row-auto">
                    <div class="img-upload-row">
                        <div class="imageSelect" data-tag="img" data-value="{{img}}" style="float: left;"></div>
                        <div class="row-info">
                            <div class="row row-link">
                                <span class="t">链接至</span>
                                <div class="linkSelect" data-tag="link" data-value="{{json link}}"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">文本内容</label>
                <div class="controls control-row-auto">
                    <input class="control-text input-large" type="text" data-tag="title" value="{{title}}" placeholder="请输入标题"/>
                    <div class="fontStyler" data-tag="titleFont" data-value='{{json titleFont}}'></div>
                </div>
                <div class="controls control-row-auto">
                    <textarea data-tag="content" placeholder="请输入内容">{{content}}</textarea>
                    <div class="fontStyler" data-tag="contentFont" data-value='{{json contentFont}}'></div>
                </div>
            </div>
        </div>
    </div>
</div>