<div class="form-horizontal">
    <div class="row-fluid">
        <div class="span24">
            <div class="control-group">
                <label class="control-label">模块背景色</label>
                <div class="controls control-row-auto">
                    <div class="colorSelect" data-value="{{modBGColor}}" data-tag="modBGColor"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="form-vertical">
    <div class="row-fluid">
        <div class="span24">
            <div class="control-group">
                <label class="control-label">文字标签(最多4个字)</label>

                <div class="controls control-row-auto">
                    <div class="settingTable" data-tag="list" data-noimage="1" data-value='{{{json list}}}'></div>
                </div>
            </div>
        </div>
    </div>
</div>