<div class="form-horizontal">
    <div class="row-fluid">
        <div class="span24">
            <div class="control-group">
                <label class="control-label">标题样式</label>
                <div class="controls control-row-auto">
                    <div class="comboList" data-tag="type" data-value="{{type}}">
                        <div class="comboListTitle">标题样式</div>
                        <div class="comboListMenu">
                            <ul>
                                <li value="1">样式一</li>
                                <li value="2">样式二</li>
                                <li value="3">样式三</li>
                                <li value="4">样式四</li>
                                <li value="5">样式五</li>
                                <li value="6">样式六</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">标题颜色</label>
                <div class="controls control-row-auto">
                    <div class="colorSelect" data-tag="color" data-value="{{color}}"></div>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">标题内容</label>
                <div class="controls control-row-auto">
                    <input type="text" data-tag="title" value="{{title}}" class="control-text input-large" placeholder="请输入标题内容"/>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">链接到</label>
                <div class="controls control-row-auto">
                    <div class="linkSelect" data-tag="link" data-value="{{json link}}"></div>
                </div>
            </div>
        </div>
    </div>
</div>