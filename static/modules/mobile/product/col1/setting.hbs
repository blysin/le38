<div class="form-horizontal">
    <div class="row-fluid">
        <div class="span24">
            <div class="control-group">
                <label class="control-label">模块背景色</label>
                <div class="controls control-row-auto">
                    <div class="colorSelect" data-value="{{modBGColor}}" data-tag="modBGColor"></div>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">布局样式</label>
                <div class="controls control-row-auto">
                    <div class="comboList" data-tag="type" data-value="{{type}}">
                        <div class="comboListTitle">布局样式</div>
