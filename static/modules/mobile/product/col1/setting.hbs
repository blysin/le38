                                <li value="1">样式一</li>
                                <li value="2">样式二</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="form-vertical">
    <div class="row-fluid">
        <div class="span24">
            <div class="control-group">
                <label class="control-label"></label>
                <div class="controls control-row-auto">
                    <div class="productSelect prdSelect-col1" data-tag="list" data-value="{{json list}}" data-multiple="1">
                        <div class="prd-cell prd-cell-1"><div class="prd-item prd-item-nopic"></div></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
