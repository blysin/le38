{{#with frame_setting}}
    {{#with global_foot.data}}
        <div class="setting-tab-item" data-setting-title="底部设置">
            <div class="setting-body-in">
                <div class="form-vertical">
                    <div class="row-fluid">
                        <div class="span24">
                            <div class="control-group">
                                <label class="control-label">返回顶部图标
                                    <span class="auxiliary-text">建议图片大小：60*60像素</span>
                                </label>
                                <div class="controls control-row-auto">
                                    <div class="imageSelect" data-name="global_foot.goTop" data-tag="global_foot.goTop" data-value="{{goTop}}"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span24">
                            <div class="control-group">
                                <label class="control-label">底部内容编辑
                                    <span class="auxiliary-text">建议内容宽度1200像素，高度不限</span>
                                </label>

                                <div class="controls control-row-auto">
                                    <div class="richText" data-name="global_foot.footerHTML" data-tag="global_foot.footerHTML" data-value="{{footerHTML}}"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/with}}
    {{#with customer_service.data}}
        <div class="setting-tab-item" data-setting-title="客服设置" data-frame="customer_service" data-type="1">
            <div class="setting-body-in">
                <div class="form-vertical">
                    <div class="row-fluid">
                        <div class="span24">
                            <div class="control-group">
                                <label class="control-label">客服帐号</label>
                                <div class="controls control-row-auto">
                                    <p>客服1：<input class="control-text" type="text" data-tag="customer_service.account1"
                                                  value="{{account1}}"/></p><br>
                                    <p>客服2：<input class="control-text" type="text" data-tag="customer_service.account2"
                                                   value="{{account2}}"/></p><br>
                                    <p>客服3：<input class="control-text" type="text" data-tag="customer_service.account3"
                                                   value="{{account3}}"/></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="setting-tab-item" data-setting-title="客服设置" data-frame="customer_service" data-type="custom">
            <div class="setting-body-in">
                <div class="form-vertical">
                    <div class="row-fluid">
                        <div class="span24">
                            <div class="control-group">
                                <label class="control-label">客服内容编辑</label>

                                <div class="controls control-row-auto">
                                    <div class="richText" data-name="customer_service.content" data-tag="customer_service.content" data-value="{{content}}"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/with}}
{{/with}}

{{#with color_setting}}
    <div class="setting-tab-item" data-setting-title="颜色设置">
        <div class="setting-body-in">
            <div class="form-horizontal">
                <div class="row-fluid">
                    <div class="span24">
                        <div class="control-group">
                            <label class="control-label">全局颜色</label>
                            <div class="controls">
                                <div class="colorSelect" data-name="color_setting.themeColor"  data-value="{{themeColor}}" data-tag="color_setting.themeColor"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/with}}

{{#if customer_service}}
    {{#with customer_service.data}}
        <div class="setting-tab-item" data-setting-title="客服设置">
            <div class="setting-body-top">
                <ul>
                    <li><label><input id="showService_checkbox" type="checkbox" data-tag="customer_service.show" {{#if show}}checked{{/if}}/>&nbsp;显示客服</label></li>
                </ul>
            </div>
            <div class="setting-body-in">
                <div class="form-horizontal">
                    <div class="row-fluid">
                        <div class="span24">
                            <div class="control-group">
                                <label class="control-label">设置客服</label>
                                <div class="controls control-row-auto">
                                    <input type="text" id="qq_account" data-tag="customer_service.account" class="control-text" placeholder="QQ号码" value="{{account}}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-vertical">
                    <div class="row-fluid">
                        <div class="span24">
                            <div class="control-group">
                                <label class="control-label">选择客服样式</label>
                                <div class="controls control-row-auto">
                                    <div class="select-customer-service">
                                        <ul>
                                            <li>
                                                <label>
                                                    <input data-tag="customer_service.style" name="service-style" type="radio" value="1" {{#ifCond style '==' 1}}checked{{/ifCond}}/>
                                                    <strong>客服样式 1</strong>
                                                </label>
                                                <span class="service-icon service-icon-1"></span>
                                            </li>
                                            <li>
                                                <label>
                                                    <input data-tag="customer_service.style" name="service-style" type="radio" value="2" {{#ifCond style '==' 2}}checked{{/ifCond}}/>
                                                    <strong>客服样式 2</strong>
                                                </label>
                                                <span class="service-icon service-icon-2"></span>
                                            </li>
                                        </ul>
                                        <ul>
                                            <li>
                                                <label>
                                                    <input data-tag="customer_service.style" name="service-style" type="radio" value="0" {{#ifCond style '==' 0}}checked{{/ifCond}}/>
                                                    <strong>自定义客服样式</strong>
                                                </label>
                                        <span class="service-icon service-icon-custom service-ico-add">
                                            <span class="img">{{#if customIcon}}<img src="{{customIcon}}">{{else}}+{{/if}}</span>
                                            <input type="hidden" data-tag="customer_service.customIcon" name="customIcon" value="{{customIcon}}">
                                        </span><span class="auxiliary-text">建议上传图片尺寸60x60像素</span>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/with}}
{{/if}}