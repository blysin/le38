        <div class="setting-tab-item" data-setting-title="热销区域设置" data-frame="item_list" data-type="1">
            <div class="setting-body-in">
                <div class="form-vertical">
                    <div class="row-fluid">
                        <div class="span24">
                            <div class="control-group">
                                <label class="control-label">左侧热销商品区域</label>
