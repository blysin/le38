{{#with frame_setting}}
{{#with list_head.data}}
<div class="setting-tab-item" data-setting-title="头部设置">
    <div class="setting-body-top">
        <ul>
            <li><label><input id="hideInWechat_checkbox" data-tag="list_head.hideInWechat" type="checkbox" {{#if hideInWechat}}checked{{/if}}/>&nbsp;微信下不显示该头部 <span class="auxiliary-text">（单独浏览器访问依然存在头部）</span></label></li>
        </ul>
    </div>
    <div class="setting-body-in">
        <div class="form-horizontal">
            <div class="row-fluid">
                <div class="span24">
                    <div class="control-group">
                        <label class="control-label">背景色</label>
                        <div class="controls">
                            <div class="colorSelect" data-name="list_head.bgcolor" data-value="{{bgcolor}}" data-tag="list_head.bgcolor"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span24">
                    <div class="control-group">
                        <label class="control-label">搜索框</label>
                        <div class="controls">
                            <input id="showSearch_checkbox" type="checkbox" data-tag="list_head.showSearch" {{#if showSearch}}checked{{/if}}/>
                            <span class="auxiliary-text">(如果不显示搜索框，则中间自动显示当前商品分类名称)</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-vertical">

            <div class="row-fluid">
                <div class="span24">
                    <div class="control-group">
                        <label class="control-label">右侧图标
                            <span class="auxiliary-text">每个图标2个字以内</span>
                        </label>

                        <div class="controls control-row-auto">
                            <div class="colorSelect" data-name="list_head.icoColor" data-value="{{icoColor}}" data-tag="list_head.icoColor"></div>
                            <div class="settingTable" data-max-count="1" data-name="list_head.icoList" data-tag="list_head.icoList" data-value='{{{json icoList}}}'></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/with}}

{{#with list_sort.data}}
    <div class="setting-tab-item" data-setting-title="排序设置">
        <div class="setting-body-top">
            <ul>
                <li><label><input id="show_sort_checkbox" data-tag="list_sort.show" type="checkbox" {{#if show}}checked{{/if}}/>&nbsp;该页面显示排序</label></li>
            </ul>
        </div>
        <div class="setting-body-in">
            <div class="form-horizontal">
                <div class="row-fluid">
                    <div class="span24">
                        <div class="control-group">
                            <label class="control-label">排序值</label>
                            <div class="controls">
                                <select data-tag="list_sort.sortItemA" id="sortItemA">
                                    <option {{#ifCond sortItemA "==" "time"}}selected{{/ifCond}} value="time">时间</option>
                                    <option {{#ifCond sortItemA "==" "price"}}selected{{/ifCond}} value="price">价格</option>
                                    <option {{#ifCond sortItemA "==" "sale"}}selected{{/ifCond}} value="sale">销量</option>
                                </select>
                                <select data-tag="list_sort.sortItemB" id="sortItemB">
                                    <option {{#ifCond sortItemB "==" "time"}}selected{{/ifCond}} value="time">时间</option>
                                    <option {{#ifCond sortItemB "==" "price"}}selected{{/ifCond}} value="price">价格</option>
                                    <option {{#ifCond sortItemB "==" "sale"}}selected{{/ifCond}} value="sale">销量</option>
                                </select>
                                <select data-tag="list_sort.sortItemC" id="sortItemC">
                                    <option {{#ifCond sortItemC "==" "time"}}selected{{/ifCond}} value="time">时间</option>
                                    <option {{#ifCond sortItemC "==" "price"}}selected{{/ifCond}} value="price">价格</option>
                                    <option {{#ifCond sortItemC "==" "sale"}}selected{{/ifCond}} value="sale">销量</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/with}}
{{/with}}