{{#with frame_setting}}
{{#with myshop_head.data}}
<div class="setting-tab-item" data-setting-title="头部设置">
    <div class="setting-body-in">
        <div class="form-vertical">
            <div class="row-fluid">
                <div class="span24">
                    <div class="control-group">
                        <label class="control-label">店铺头部图
                            <span class="auxiliary-text">建议图片大小：640*250像素</span>
                        </label>
                        <div class="controls control-row-auto">
                            <div class="imageSelect" data-name="myshop_head.banner" data-tag="myshop_head.banner" data-value="{{banner}}"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span24">
                    <div class="control-group">
                        <label class="control-label">店铺头像
                            <span class="auxiliary-text">建议图片大小：140*140像素</span>
                        </label>
                        <div class="controls control-row-auto">
                            <div class="imageSelect" data-name="myshop_head.userImage" data-tag="myshop_head.userImage" data-value="{{userImage}}"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-horizontal">
            <div class="row-fluid">
                <div class="span24">
                    <div class="control-group">
                        <label class="control-label">店铺名称</label>

                        <div class="controls control-row-auto">
                            <input class="control-text input-large" type="text" placeholder="输入店铺名称" value="{{name}}" data-tag="myshop_head.name" id="name"/>&nbsp;
                            <div class="fontStyler" data-tag="myshop_head.font" data-name="myshop_head.font" data-value="{{json font}}"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/with}}

{{#with myshop_menu.data}}
    <div class="setting-tab-item" data-setting-title="导航设置">
        <div class="setting-body-top">
            <ul>
                <li><label><input id="menu_show" data-tag="myshop_menu.show" type="checkbox" {{#if show}}checked{{/if}}/>&nbsp;该页面显示菜单 <span class="auxiliary-text">（以下设置对整个微店的所有页面都生效）</span></label></li>
            </ul>
        </div>
        <div class="setting-body-in">
            <div class="form-vertical">
                <div class="row-fluid">
                    <div class="span24">
                        <div class="control-group">
                            <label class="control-label">导航编辑
                                <span class="auxiliary-text">每个菜单5个字以内</span>
                            </label>
                            <div class="controls control-row-auto">
                                <div class="menuSetting" data-tag="myshop_menu.menu" data-name="myshop_menu.menu" data-col="4" data-row="5" data-value="{{json menu}}"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/with}}
{{/with}}